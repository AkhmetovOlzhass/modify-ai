{
  "manifest_version": 3,
  "name": "Moodify AI",
  "description": "AI-powered mood-based playlists using Gemini and Spotify",
  "version": "1.0",
  "permissions": [
    "identity",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/index.js"
  },
  "host_permissions": [
    "https://accounts.spotify.com/*",
    "https://api.spotify.com/*",
    "https://generativelanguage.googleapis.com/*"
  ]
}