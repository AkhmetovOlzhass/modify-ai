{
  "manifest_version": 3,
  "name": "Moodify AI - Playlist generator in Spotify",
  "description": "AI-powered mood-based playlists using Gemini and Spotify",
  "version": "1.0",
  "permissions": [
    "identity",
    "storage"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "host_permissions": [
    "https://accounts.spotify.com/*",
    "https://api.spotify.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
  "16": "public/logo.png",
  "32": "public/logo.png",
  "48": "public/logo.png",
  "128": "public/logo.png"
  }
}